<h1> Flight Index </h1>

<% @flights.each do |flight| %>
  <div id="flight-<%= flight.id %>">
    <p> <%= flight.airline.name %> flight: <%= flight.number %>   </p>
   <% flight.passengers.each do |passenger| %>
    <p> <%=  passenger.name %> </p>
    <%= button_to 'Remove Passenger', "/flight_passengers/#{flight.id}/#{passenger.id}", method: :delete, local: true %>
    <% end %>
  </div>
<% end %>
